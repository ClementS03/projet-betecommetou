{
    "name": "loris/wordpress-custom",
    "authors": [
        {
            "name": "Loris",
            "email": "loris@oclock.io"
        }
    ],
    "repositories":[
        {
            "type":"composer",
            "url":"https://wpackagist.org"
        }
    ],
    "require": {
        "johnpbloch/wordpress": "*",
        "wpackagist-theme/twentytwenty": "*",
        "wpackagist-plugin/akismet": "*",
        "wpackagist-plugin/contact-form-7": "^5.1",
        "wpackagist-plugin/advanced-custom-fields": "^5.8",
        "wpackagist-plugin/what-the-file": "^1.5",
        "wpackagist-plugin/simply-show-hooks": "^1.2",
        "wpackagist-plugin/user-registration": "1.8.2.1",
        "wpackagist-plugin/jwt-authentication-for-wp-rest-api": "^1.2"
    },
    "extra" : {
        "wordpress-install-dir": "wp",
        "installer-paths": {
            "content/themes/{$name}": ["type:wordpress-theme"],
            "content/plugins/{$name}": ["type:wordpress-plugin"]
        }
    }
}
